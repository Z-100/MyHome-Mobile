<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".fragment.SettingsFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/hello_blank_fragment" />

    <include android:id="@+id/navbarButtons"
            layout="@layout/include_navbar_buttons"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    <Button android:id="@+id/manageMembersButton"
            android:text="Manage members"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    <Button android:id="@+id/manageSmartDevicesButton"
            android:text="Manage smart devices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    <Button android:id="@+id/changePasswordButton"
            android:text="Change password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    <Button android:id="@+id/helpButton"
            android:text="Help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    <Button android:id="@+id/deleteAccountButton"
            android:text="Delete account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    <Button android:id="@+id/signoffButton"
            android:text="Sign off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    <include android:id="@+id/navigationButtons"
            layout="@layout/include_menu_buttons"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
</LinearLayout>
