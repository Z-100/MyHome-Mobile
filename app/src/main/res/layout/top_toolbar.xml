<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp">


        <RelativeLayout android:id="@+id/backButton"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp">

            <ImageView android:id="@+id/backButtonImage"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@drawable/back_arrow"
                    android:layout_centerVertical="true" />


            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rooms"
                    android:layout_toEndOf="@id/backButtonImage"
                    android:layout_centerVertical="true"
                    android:textColor="@color/main_writing_color"
                    android:textSize="20sp" />
        </RelativeLayout>


        <ImageView android:id="@+id/account_settingsButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/btn_account_settings"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp" />

    </RelativeLayout>

</RelativeLayout>